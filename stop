#! /bin/bash


echo "----------------------------------------------------------------"
echo "stopping application..."
echo "----------------------------------------------------------------"
sleep 1
docker-compose down
sleep 1
echo "---------------------------------------------------------------"
echo "application stopped!"
echo "---------------------------------------------------------------"

echo ""
echo ""

echo "---------------------------------------------------------------"
echo "application running at now"
echo "---------------------------------------------------------------"
docker ps
sleep 1

echo "==============================================================="
echo ""
echo ""

